<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link rel="icon" href="../assets/img/logo_dumbways.png" />
    <title>Kevin Falah</title>
  </head>
  <body>
    <!-- Navigasi Bar -->

    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img
            src="../assets/img/logo_dumbways.png"
            width="80px"
            alt="Dumbways"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link fw-bold active fs-5"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
            <li class="nav-item">
              
              <a
                class="nav-link fw-normal active fs-5"
                aria-current="page"
                href="/project"
              >Add Project</a>
            </li>
            {{/if}}
          </ul>
          {{#if isLogin}}
            <a class="btn text-dark fw-bold">Haii, {{user.username}}</a>
            <a href="/logout" class="btn text-dark fw-bold mx-3">Logout</a>
          {{else}}
            <a href="/register" class="btn text-dark fw-bold">Register</a>
            <a href="/login" class="btn text-dark fw-bold mx-3">Login</a>
          {{/if}}

          <a href="/contact">
            <button class="btn bg-dark text-light px-4">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main -->
    <section class="py-5">
      {{#if messages.success}}
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          {{messages.success}}
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
      {{/if}}
      <div
        class="container main-container p-4 d-flex rounded bg-light d-lg-flex flex-wrap"
      >
        <div class="main-left px-4 py-5">
          <h1 class="fw-bold fs-4 text-dark">Hi Welcome to my hut</h1>
          <p>
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Impedit
            natus, consequatur ratione incidunt non adipisci ipsam, est
            voluptatum tempora illum molestias assumenda illo exercitationem
            laborum saepe sed voluptas laudantium maxime? Lorem ipsum dolor sit,
            amet consectetur adipisicing elit. Lorem, ipsum dolor sit amet
            consectetur adipisicing elit. In odio aliquid doloribus cum ad sint.
            Aut inventore facilis ducimus quibusdam. Lorem ipsum dolor sit amet
            consectetur adipisicing elit. Iusto.
          </p>

          <div class="link-contact d-flex">
            <a
              href="https://api.whatsapp.com/send/?phone=6289636992241&text=Hallo+Kevin%&app_absent=0"
            >
              <button
                type="button"
                class="btn btn-secondary btn-sm btn-color rounded-pill px-4"
              >
                Contact
              </button>
            </a>

            <div class="linkCV">
              <a
                href="https://drive.google.com/file/d/1nmu0TFx8c9CDL2FV1NJbP4ZFHkYL3aCp/view?usp=sharing"
                target="_blank"
                class="text-decoration-none text-dark"
              >
                <p style="cursor: pointer">
                  download CV
                  <span>
                    <i class="fa-solid fa-download"></i>
                  </span>
                </p>
              </a>
            </div>
          </div>

          <div class="sosmed d-flex justify-content-between mx-4 my-4">
            <a
              href="https://www.linkedin.com/in/kevin-ghossan-falah-476ab218b/"
            >
              <i class="fa-brands fa-linkedin fs-4 text-dark"></i>
            </a>
            <a href="https://www.instagram.com/kevin.falah/">
              <i class="fa-brands fa-instagram fs-4 text-dark"></i>
            </a>
            <a href="https://www.facebook.com/">
              <i class="fa-brands fa-facebook fs-4 text-dark"></i>
            </a>
            <a href="https://twitter.com/">
              <i class="fa-brands fa-twitter fs-4 text-dark"></i>
            </a>
          </div>
        </div>

        <div class="main-right mx-3">
          <div class="card text-center mx-5">
            <header>
              <img
                src="../assets/img/POTRET.jpeg"
                alt="FotoDiri"
                width="100%"
                height="300px"
                class="rounded"
                style="object-fit: cover"
              />
            </header>
            <div class="card-foot">
              <h2 class="fw-bold fs-2">Kevin Falah</h2>
              <p class="">Fullstack Developer</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery -->

    <section class="gallery p-3 bg-light">
      <h1 class="fs-1 fw-bold text-center my-5">MY PROJECT</h1>
      <div class="col-gallery d-flex flex-wrap gap-3">

        {{#each dataResult}}
          {{#if isTrue}}

            <h1 class="warn">error :(</h1>

          {{else}}
            <div class="card p-2" style="width: 25rem">
              <a href="/detail/{{this.id}}">
                <img
                  src="/uploads/{{this.image}}"
                  class="card-img-top rounded"
                  style="height: 300px;"
                  alt="gallery"
                />
              </a>
              <div class="card-body">
                <h4 class="card-title fs-5">{{this.name}}</h4>
                <p class="durasi">durasi: {{this.duration}} | <strong>{{this.author}}</strong></p> 
                <p class="card-text">
                  {{this.description}}
                </p>

                <div class="gallery-icon fs-2 d-flex justify-content-between">
                  {{#each technologies}}
                    <i class="fa-brands fa-{{this}} fs-4 text-dark"></i>
                  {{/each}}
                </div>
              </div>
              <div class="card-body d-flex w-100 gap-2">
                {{! Edit }}
                <a
                  href="/edit-project/{{this.id}}"
                  type="button"
                  class="btn bg-dark text-light btn-sm w-50 rounded fw-bold"
                >
                  edit
                </a>

                {{! Delete }}
                <a
                  href="/delete-project/{{this.id}}"
                  type="button"
                  class="btn bg-dark text-light btn-sm w-50 rounded fw-bold"
                >
                  delete
                </a>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
      integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
      crossorigin="anonymous"
    ></script>
  </body>
</html>