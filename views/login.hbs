<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    />
    <link rel="icon" href="../assets/img/logo_dumbways.png" />
    <title>Login</title>
  </head>
  <body>

    <!-- Navigasi Bar -->
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img
            src="../assets/img/logo_dumbways.png"
            width="80px"
            alt="Dumbways"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link fw-bold active fs-5"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
            <li class="nav-item">
              <a
                class="nav-link fw-normal active fs-5"
                aria-current="page"
                href="/project"
              >Add Project</a>
            </li>
            {{/if}}
          </ul>
          <div>
            <a href="/register" class="btn text-dark fw-bold">Register</a>
            <a href="/login" class="btn text-dark fw-bold mx-3">Login</a>
            <a href="/contact">
              <button class="btn bg-dark text-light px-4">Contact Me</button>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Add My Project -->
    <!-- Form -->
    <section class="valueProject">
      <div class="container-login">
        <h1 class="fs-4 text-center fw-bold mb-4">LOGIN TO YOUR ACCOUNT</h1>

        <form action="/login" method="post">
          <div class="mb-3">
            <label
              for="inputEmail"
              class="form-label fw-bold mt-4"
            >Email</label>
            <input
              type="email"
              class="form-control input-form"
              id="inputEmail"
              name="inputEmail"
            />
            <div id="emailHelp" class="form-text">email anda aman ditangan kami.</div>
          </div>
          <div class="mb-3">
            <label
              for="inputPassword"
              class="form-label fw-bold"
            >Password</label>
            <input
              type="password"
              class="form-control input-form"
              id="inputPassword"
              name="inputPassword"
            />
          </div>
          {{#if messages.danger}}
            <div
              class="alert alert-danger alert-dismissible fade show"
              role="alert"
            >
              {{messages.danger}}
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
            </div>
          {{/if}}
          <div class="d-flex justify-content-end btn-sub">
            <button
              type="submit"
              onclick="onSubmit()"
              class="btn bg-dark text-light px-4 rounded-pill"
            >Submit</button>
          </div>

        </form>

      </div>
    </section>
    <script src="../assets/js/project.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>